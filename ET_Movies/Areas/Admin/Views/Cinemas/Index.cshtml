@model IEnumerable<Cinemas>
<div class="container my-3">
    <div class="row">
        <div class="col-12 d-flex justify-content-between align-items-center">
            <h1>All Products</h1>
            <a class="btn btn-success" href="/Admin/Cinemas/Create">Create New</a>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-12">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr class="bg-dark text-white">
                            <th scope="col">#</th>
                            <th scope="col">Name</th>
                            <th scope="col">Description</th>
                            <th scope="col">Address</th>
                            <th scope="col">CinemaLogo</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th scope="row">@item.Id</th>
                                <td>@item.Name </td>
                                <td>@item.Description</td>
                                <td>@item.Address</td>
                                <td>@item.CinemaLogo</td>

                                <td>
                                    <a class="btn btn-warning btn-sm" href="/Admin/Cinemas/Edit?Id=@item.Id">Edit</a>
                                    <form asp-action="Delete" asp-route-Id="@item.Id" method="post">
                                        <button type="submit" class="btn btn-danger">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

