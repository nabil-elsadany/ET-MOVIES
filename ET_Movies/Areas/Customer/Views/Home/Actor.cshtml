<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Actor Profile</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #000;
            color: #ffa500;
        }

        .profile-card {
            max-width: 700px;
            margin: 50px auto;
            padding: 40px;
            border-radius: 12px;
            box-shadow: 0 6px 12px rgba(255, 165, 0, 0.2);
            background-color: #222;
            min-height: 450px;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .profile-img {
            width: 90px;
            height: 90px;
            border-radius: 50%;
            object-fit: cover;
            border: 3px solid #ffa500;
        }

        .btn-social {
            background-color: #ffa500;
            color: #000;
            font-weight: bold;
            display: inline-block;
            margin-top: 20px;
        }

            .btn-social:hover {
                background-color: #ff8c00;
                color: #000;
            }

        /* تصميم الكروت الخاصة بالأفلام */
        .movie-card {
            background-color: #222;
            color: #ffa500;
            border-radius: 12px;
            box-shadow: 0 4px 8px rgba(255, 165, 0, 0.2);
            overflow: hidden;
            text-align: center;
            padding: 10px;
        }

            .movie-card img {
                width: 100%;
                height: 180px;
                object-fit: cover;
                border-radius: 8px;
            }

        .movie-title {
            font-weight: bold;
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="profile-card border">
            <div class="d-flex align-items-center">
                <img src="~/Images/cast/@Model.ProfilePicture" alt="Actor" class="profile-img me-4">
                <div>

                    <h4 class="fw-bold">@Model.FirstName @Model.LastName</h4>

                </div>
            </div>
            <p class="mt-4">
                @Model.Bio
            </p>
            <a href="#" class="btn btn-social px-4 py-2 rounded">Follow on Social Media</a>
        </div>

        <!-- قسم الأفلام -->
        <h3 class="text-center mt-5">Other works</h3>
        <div class="row mt-3">
            @foreach (var item in ViewBag.releted)
            {
                <div class="col-md-4 col-sm-2 mb-4">
                    <div class="movie-card">

                        <a href="/Customer/Home/Details?MovieId=@item.Movie.Id" class=" col-md-4 col-sm-2 mb-4 rounded">
                            <img src="~/Images/movies/@item.Movie.ImgUrl" alt="#">
                            <p class="movie-title">@item.Movie.Name</p>
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</body>
</html>
